MenuButton {
    border: 2px solid #613924;
    border-radius: 3px;
    background-color: #875032;
    min-width: 100px;
    min-height: 30px;
    color: #ffffff;
}

MenuButton:pressed {
    background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                      stop: 0 #dadbde, stop: 1 #f6f7fa);
}


PromotionButton#wN{
    border-image: url(images/merida/wN.png) 0 0 0 0 stretch stretch;
}
PromotionButton#wQ{
