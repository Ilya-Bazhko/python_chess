MainMenu{
    border-image: url(images/board.jpg) 0 0 0 0 stretch stretch;
}

Cell[color="black"][pressed="yes"]{
    border: 3px solid green;
    background-color: #9a561b;
}
Cell[color="white"][pressed="yes"]{
    border: 3px solid green;
    background-color: #e6ccab;
}

Cell[color="black"][pressed="beat"]{
    border: 3px solid red;
    background-color: #9a561b;
}
Cell[color="white"][pressed="beat"]{
    border: 3px solid red;
    background-color: #e6ccab;
}

Cell[color="black"]{
    border: 3px solid transparent;
    background-color: #9a561b;
}
Cell[color="white"]{
    border: 3px solid transparent;
    background-color: #e6ccab;
}

Cell[color="black"][type="moved"]{
    border: 3px solid transparent;
    background-color: #9a9b1b;
}
Cell[color="white"][type="moved"]{
    border: 3px solid transparent;
    background-color: #aabb5b;
}

Cell[color="black"][type="moved"][pressed="yes"]{
    border: 3px solid green;
    background-color: #9a9b1b;
}
Cell[color="white"][type="moved"][pressed="yes"]{
    border: 3px solid green;
    background-color: #aabb5b;
}

Cell[color="black"][type="moved"][pressed="beat"]{
    border: 3px solid red;
    background-color: #9a9b1b;
}
Cell[color="white"][type="moved"][pressed="beat"]{
    border: 3px solid red;
    background-color: #aabb5b;
}


